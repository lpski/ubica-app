.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fas.fa-flask
        | UBICA
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title === 'Home') ? 'active' : undefined)
          a(href='/') Home
        li(class=(title === 'Setup' || title ==='Configure' || title ==='Teams' || title ==='Review') ? 'active' : undefined)
          a(href='/setup') Setup
        li(class=(title === 'Monitor') ? 'active' : undefined)
          a(href='/monitor') Monitor
        li(class=(title === 'Upload' || title === 'Upload - Manual') ? 'active' : undefined)
          a(href='/upload') Upload
        li(class=(title === 'View Studies' || title === 'Study Results') ? 'active' : undefined)
          a(href='/results') Results
        li(class=(title === 'Devices') ? 'active' : undefined)
          a(href='/devices') Devices
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title === 'Login') ? 'active' : undefined)
            a(href='/login') Login
          li(class=(title === 'Create Account') ? 'active' : undefined)
            a(href='/signup') Create Account
        else
          li.dropdown(class=(title === 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/logout') Logout
